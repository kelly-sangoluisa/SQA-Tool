# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================

# Tipo de proveedor de base de datos: 'postgres' | 'mysql' | 'sqlite'
DB_TYPE=postgres

# Opción 1: URL completa de base de datos (recomendada para Supabase)
DATABASE_URL=postgresql://user:password@host:port/database

# Opción 2: Configuración manual de base de datos (para otros proveedores)
# Descomenta estas líneas si no usas DATABASE_URL
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=your_password
# DB_NAME=sqa_tool

# Configuración SSL y otros
DB_SSL=true
DB_LOGGING=false

# =============================================================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# =============================================================================

# Proveedor de autenticación: 'supabase' | 'custom' | 'firebase' | 'auth0'
AUTH_PROVIDER=supabase

# ---- Configuración para Supabase ----
# Solo se usa si AUTH_PROVIDER=supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret
SUPABASE_RESET_REDIRECT_TO=http://localhost:3000/auth/reset-password

# ---- Configuración para JWT Custom ----
# Solo se usa si AUTH_PROVIDER=custom
# JWT_SECRET=your-super-secret-jwt-key
# JWT_EXPIRES_IN=1d

# =============================================================================
# CONFIGURACIÓN GENERAL DE LA APLICACIÓN
# =============================================================================

# Entorno de la aplicación
NODE_ENV=development

# Puerto del servidor
PORT=3001

# Prefix de la API
API_PREFIX=api

# Rate limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Configuración de cookies
JWT_COOKIE_DOMAIN=
COOKIE_SAMESITE=lax
COOKIE_SECURE=false

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# =============================================================================
# NOTAS PARA CONFIGURACIÓN
# =============================================================================
#
# Para usar con Supabase:
# 1. Crea un proyecto en https://supabase.com
# 2. Copia DATABASE_URL de Settings > Database
# 3. Copia las credenciales de Settings > API
# 4. Configura AUTH_PROVIDER=supabase
#
# Para usar PostgreSQL tradicional:
# 1. Cambia AUTH_PROVIDER a 'custom'
# 2. Configura DATABASE_URL o las variables DB_*
# 3. Agrega JWT_SECRET y JWT_EXPIRES_IN
#
# Para producción:
# 1. Cambia NODE_ENV=production
# 2. Usa HTTPS para CORS_ORIGINS
# 3. Configura COOKIE_SECURE=true
#
# =============================================================================